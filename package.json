{
  "name": "project-chat",
  "version": "0.2.0",
  "description": "Drop-in chat widget with MCP-based project context. Makes any project conversable.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js",
      "require": "./dist/mcp/index.cjs"
    },
    "./protocol": {
      "types": "./dist/shared/protocol.d.ts",
      "import": "./dist/shared/protocol.js",
      "require": "./dist/shared/protocol.cjs"
    },
    "./embed": {
      "types": "./dist/client/embed.d.ts",
      "import": "./dist/client/embed.js"
    }
  },
  "bin": {
    "project-chat-mcp": "./dist/mcp/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    ".claude"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "@anthropic-ai/claude-agent-sdk": ">=0.2.50"
  },
  "peerDependenciesMeta": {
    "react": { "optional": true },
    "react-dom": { "optional": true },
    "@anthropic-ai/claude-agent-sdk": { "optional": true }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "chat-widget",
    "claude",
    "mcp",
    "intercom",
    "ai-chat",
    "project-context",
    "model-context-protocol"
  ],
  "author": "Caleb Hicks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/calebhicks/project-chat.git"
  }
}
